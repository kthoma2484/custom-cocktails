<div class="row main-title">
      <h1>Custom Cocktails!</h1>
</div>

<div class="row content">
  <div class="col-sm-3 drinks-list">

    <h2>What are you having?</h2>
    <ul>
      {{#each cocktail}}
      {{#unless drunken}}
      <li>
        {{drink_name}}
        <br>
        <button class="change-drink-state" data-id="{{id}}" data-drinkstate="{{drunken}}">
          Have a drink!
        </button>
      </li>
      <br>
      {{/unless}}
      {{/each}}
    </ul>
  </div>

   <div class="col-sm-3 drinks-drunken">
    <h3>Drinks on you tab!</h3>
    <ul>
      {{#each cocktail}}
      {{#if drunken}}
      <li>
        {{drink_name}}
        <button class="change-drink-state hidden" data-id="{{id}}" data-drinkstate="{{drunken}}">
          Have a drink!
        </button>
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="col-sm-3 drink-order">
      <h2>Add a Custom Cocktail</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="drink">Cocktail Name:</label>
          <input type="text" id="drink" name="name">
        </div>

        <button type="submit">Drink it!</button>
      </form>

  </div>

</div>

<div class="row lower-row">
<button class="clear-tab">Clear Tab</button>
</div>